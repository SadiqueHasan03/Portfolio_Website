<svg width="600" height="400" viewBox="0 0 600 400" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="600" height="400" fill="#ede9fe"/>
  
  <!-- Sorting bars animation -->
  <g fill="#8b5cf6">
    <rect x="100" y="200" width="30" height="150" rx="4">
      <animate attributeName="height" values="150;80;150" dur="2s" repeatCount="indefinite"/>
      <animate attributeName="y" values="200;270;200" dur="2s" repeatCount="indefinite"/>
    </rect>
    <rect x="150" y="150" width="30" height="200" rx="4">
      <animate attributeName="height" values="200;120;200" dur="2s" repeatCount="indefinite" begin="0.3s"/>
      <animate attributeName="y" values="150;230;150" dur="2s" repeatCount="indefinite" begin="0.3s"/>
    </rect>
    <rect x="200" y="250" width="30" height="100" rx="4">
      <animate attributeName="height" values="100;180;100" dur="2s" repeatCount="indefinite" begin="0.6s"/>
      <animate attributeName="y" values="250;170;250" dur="2s" repeatCount="indefinite" begin="0.6s"/>
    </rect>
    <rect x="250" y="180" width="30" height="170" rx="4">
      <animate attributeName="height" values="170;90;170" dur="2s" repeatCount="indefinite" begin="0.9s"/>
      <animate attributeName="y" values="180;260;180" dur="2s" repeatCount="indefinite" begin="0.9s"/>
    </rect>
    <rect x="300" y="220" width="30" height="130" rx="4">
      <animate attributeName="height" values="130;160;130" dur="2s" repeatCount="indefinite" begin="1.2s"/>
      <animate attributeName="y" values="220;190;220" dur="2s" repeatCount="indefinite" begin="1.2s"/>
    </rect>
    <rect x="350" y="170" width="30" height="180" rx="4">
      <animate attributeName="height" values="180;110;180" dur="2s" repeatCount="indefinite" begin="1.5s"/>
      <animate attributeName="y" values="170;240;170" dur="2s" repeatCount="indefinite" begin="1.5s"/>
    </rect>
    <rect x="400" y="130" width="30" height="220" rx="4">
      <animate attributeName="height" values="220;140;220" dur="2s" repeatCount="indefinite" begin="1.8s"/>
      <animate attributeName="y" values="130;210;130" dur="2s" repeatCount="indefinite" begin="1.8s"/>
    </rect>
  </g>
  
  <!-- Control buttons -->
  <rect x="470" y="100" width="80" height="30" rx="15" fill="#6366f1" stroke="#4f46e5" stroke-width="2"/>
  <text x="510" y="120" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="12">Sort</text>
  
  <!-- Title -->
  <text x="300" y="50" text-anchor="middle" fill="#5b21b6" font-family="Arial, sans-serif" font-size="24" font-weight="bold">Sorting Visualizer</text>
  <text x="300" y="380" text-anchor="middle" fill="#6b21a8" font-family="Arial, sans-serif" font-size="14">Algorithm Visualization Tool</text>
</svg>