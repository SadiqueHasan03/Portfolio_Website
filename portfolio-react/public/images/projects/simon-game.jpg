<svg width="600" height="400" viewBox="0 0 600 400" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="600" height="400" fill="#f0fdf4"/>
  
  <!-- Simon game interface -->
  <circle cx="300" cy="200" r="120" fill="#374151" stroke="#111827" stroke-width="4"/>
  
  <!-- Game sectors -->
  <path d="M300 200 L300 80 A120 120 0 0 1 420 200 Z" fill="#dc2626">
    <animate attributeName="opacity" values="1;0.5;1" dur="1.5s" repeatCount="indefinite"/>
  </path>
  <path d="M300 200 L420 200 A120 120 0 0 1 300 320 Z" fill="#2563eb">
    <animate attributeName="opacity" values="1;0.5;1" dur="1.5s" repeatCount="indefinite" begin="0.375s"/>
  </path>
  <path d="M300 200 L300 320 A120 120 0 0 1 180 200 Z" fill="#facc15">
    <animate attributeName="opacity" values="1;0.5;1" dur="1.5s" repeatCount="indefinite" begin="0.75s"/>
  </path>
  <path d="M300 200 L180 200 A120 120 0 0 1 300 80 Z" fill="#16a34a">
    <animate attributeName="opacity" values="1;0.5;1" dur="1.5s" repeatCount="indefinite" begin="1.125s"/>
  </path>
  
  <!-- Center circle -->
  <circle cx="300" cy="200" r="30" fill="#111827"/>
  <circle cx="300" cy="200" r="20" fill="#374151"/>
  
  <!-- Score display -->
  <rect x="250" y="30" width="100" height="30" rx="15" fill="#374151"/>
  <text x="300" y="50" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="14">Score: 5</text>
  
  <!-- Title -->
  <text x="300" y="370" text-anchor="middle" fill="#166534" font-family="Arial, sans-serif" font-size="24" font-weight="bold">Simon Game</text>
  <text x="300" y="390" text-anchor="middle" fill="#15803d" font-family="Arial, sans-serif" font-size="14">Memory Challenge Game</text>
</svg>